<%- include('./partials/header'); -%>
    <%var hotelurl= hotelName.replace(" ","-") %>
        <div class="tableContainer">
            <a href="/hotel/<%=hotelurl%>"><button class="btn btn-primary" style="margin-left: 3%;">
            < Back</button> <br></a>
            <h1 style="margin: 5%;">Assignments of
                <%=hotelName %>
            </h1>
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Staff ID</th>
                        <th scope="col">Room ID</th>
                        <th scope="col">Room Number</th>
                        <th scope="col">Staff Name</th>
                        <th scope="col">Position</th>
                        <th width="15%" scope="col"><a href="/hotel/<%=hotelurl%>/jobAssignments/add"><button id="addAssignmentBtn" class="btn btn-primary btn-sm"
                                    style="float: right;">Add
                                    Assignment</button></a></th>

                    </tr>
                </thead>
                <tbody>
                    <% for(i = 0 ; i<assignments.length ; i++){ %>
                        <tr>
                            <th scope="row">
                                <%=(i+1)%>
                            </th>
                            <td>
                                <%=assignments[i].StaffID %>
                            </td>
                            <td>
                                <%=assignments[i].RoomID %>
                            </td>
                            <td>
                                <%=assignments[i].RoomNumber %>
                            </td>
                            <td>
                                <%=assignments[i].StaffName %>

                            </td>
                            <td>
                                <%=assignments[i].PositionName %>

                            </td>
                            <td>
                                <button type="button" class="btn btn-outline-danger btn-sm rowButton deleteAssignment"><i
                                    class="fa fa-trash"></i></button>
                                <button type="button" class="btn btn-outline-warning btn-sm rowButton mr-2 editAssignment"><i
                                    class="fa fa-edit"></i></button>
                            </td>
                        </tr>
                        <% }%>
                </tbody>
            </table>
        </div>

        <p id="hotelUrl" style="display: none;">
            <%=hotelurl%>
        </p>



        <script type="text/javascript" src="/js/jobAssignments.js"></script>
        <%- include('./partials/footer'); -%>