<%- include('./partials/header'); -%>
    <% var hotelUrl=hotelName.replace(" ","-"); %>
        <a href="/hotel/<%=hotelUrl%>/restaurants"><button class="btn btn-primary" style="margin-left: 3%; margin-top: 3%;">
        < Back</button> <br></a>
        <h1 style="margin-left: 11%; margin-top:2% "> Add Restaurant to
            <%=hotelName %>
        </h1>
        <div class="container p-4" style="margin-top:60px; margin-bottom:120px; border: 1px solid black; border-radius: 10px; box-shadow:5px 5px 30px 7px rgba(0, 0, 0, 0.25), -5px -5px 30px 7px rgba(0, 0, 0, 0.22);">
            <form id="myform">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputRestaurantType">Select Restaurant Type</label>
                        <select name="inputRestaurantType" id="inputRestaurantType" class="form-control required" required>
                                <option disabled selected value style="display:none;">Select</option>
                                <option>Steak</option>
                                <option>Chinese</option>
                                <option>Turkish</option>
                                <option>Fast Food</option>
                                <option>Mexican</option>
                                <option>Italian</option>
                                <option>Fish</option>
                               </select>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputCapacity">Enter Restaurant Capacity</label>
                        <input type="number" min="1" max="1000" name="inputCapacity" id="inputCapacity" class="form-control required" required>
                    </div>

                </div>
            </form>
            <button type="submit" id="restaurantSubmitBtn" class="btn btn-primary">Add</button>
        </div>

        <p id="hotelUrl" style="display: none;">
            <%=hotelUrl %>
        </p>



        <script type="text/javascript" src="/js/addRestaurant.js"></script>
        <%- include('./partials/footer'); -%>